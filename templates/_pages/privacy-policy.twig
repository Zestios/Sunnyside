{# @var craft \craft\web\twig\variables\CraftVariable #}
{% set pageClass = 'app-newsfeed' %}
{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
  <style>
    {{ source ("_pages/cookie-policy_critical.min.css", ignore_missing = true) }}
  </style>
{% endblock %}

{% block aside %}{% endblock %}

{% block content %}

  <section class="terms-wrapper">
    <div class="terms-content">
      {% if entry.enableSimplyPolicy %}
        {% set name = entry.policyCompanyName ?: systemName %}
        {% set url = entry.policyWebsiteUrl ?: currentSite.baseUrl %}
        {% set email = entry.policyContactEmail ?: getenv('EMAIL_SYSTEM_ADDRESS') %}
        {{ 'policy'|t({'name': name, 'url': url, 'email': email})|raw }}
      {% else %}
        {{ entry.cookiePolicy|raw }}
      {% endif %}
    </div>
  </section>

{% endblock %}

{% block _inline_js %}
{% endblock %}
