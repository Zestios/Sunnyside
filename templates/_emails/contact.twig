{#
 # Emails - Contact Template
 # ------------
#}

{% extends "_emails/master" %}

{% block content %}

  {{ email.contactFormText }}
  <table class="attributes" width="100%" cellpadding="0" cellspacing="0">
    <tr>
      <td class="attributes_content">
        <table width="100%" cellpadding="0" cellspacing="0">
          <tr><td class="attributes_item"><strong>Full Name:</strong> {{ submission.fromName }}</td></tr>
          <tr><td class="attributes_item"><strong>Email:</strong> {{ submission.fromEmail }}</td></tr>
          {% for key, item in submission.message %}
            <tr><td class="attributes_item"><strong>{{ key }}:</strong> {{ item }}</td></tr>
          {% endfor %}
        </table>
      </td>
    </tr>
  </table>

{% endblock %}
